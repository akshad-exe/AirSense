# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database
DB_PATH=./data/airsense.db

# Security
API_KEY_LENGTH=32
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# WebSocket
WS_PORT=3000

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Device Management
DEVICE_OFFLINE_THRESHOLD=60000  # 60 seconds (1 minute)
HEARTBEAT_CHECK_INTERVAL=30000  # 30 seconds
STATUS_UPDATE_INTERVAL=30000    # 30 seconds

# Rate Limiting
RATE_LIMIT_WINDOW=60000         # 1 minute
RATE_LIMIT_MAX_REQUESTS=60      # 60 requests per minute
API_RATE_LIMIT_WINDOW=900000    # 15 minutes
API_RATE_LIMIT_MAX=100          # 100 requests per 15 minutes

# Data Retention (optional)
DATA_RETENTION_DAYS=90          # Keep data for 90 days
CLEANUP_INTERVAL=86400000       # Run cleanup daily (24 hours)
