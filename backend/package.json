{
    "name": "airsense-backend",
    "version": "1.0.0",
    "description": "AirSense - Offline-First Real-Time AQI Monitoring Platform Backend",
    "main": "dist/server.js",
    "scripts": {
        "dev": "nodemon src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "db:migrate": "ts-node src/database/migrate.ts",
        "db:seed": "ts-node src/database/seed.ts",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write src/**/*.ts"
    },
    "keywords": [
        "aqi",
        "air-quality",
        "iot",
        "offline-first",
        "real-time",
        "websocket",
        "sqlite"
    ],
    "author": "AirSense Team",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "better-sqlite3": "^9.2.2",
        "ws": "^8.16.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "helmet": "^7.1.0",
        "express-rate-limit": "^7.1.5",
        "joi": "^17.11.0",
        "winston": "^3.11.0",
        "uuid": "^9.0.1",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/ws": "^8.5.10",
        "@types/better-sqlite3": "^7.6.8",
        "@types/cors": "^2.8.17",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.10.6",
        "typescript": "^5.3.3",
        "nodemon": "^3.0.2",
        "ts-node": "^10.9.2",
        "jest": "^29.7.0",
        "@types/jest": "^29.5.11",
        "ts-jest": "^29.1.1",
        "supertest": "^6.3.3",
        "@types/supertest": "^6.0.2",
        "eslint": "^8.56.0",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "prettier": "^3.1.1"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}