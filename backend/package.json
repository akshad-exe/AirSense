{
    "name": "airsense-backend",
    "version": "1.0.0",
    "description": "AirSense - Offline-First Real-Time AQI Monitoring Platform Backend",
    "main": "dist/server.js",
    "scripts": {
        "dev": "nodemon",
        "build": "tsc",
        "start": "bun run src/server.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "db:seed": "bun run src/database/seed.ts",
        "db:inspect": "bun run src/database/inspect.ts",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write src/**/*.ts"
    },
    "keywords": [
        "aqi",
        "air-quality",
        "iot",
        "offline-first",
        "real-time",
        "websocket",
        "sqlite"
    ],
    "author": "AirSense Team",
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "uuid": "^9.0.1",
        "winston": "^3.11.0",
        "ws": "^8.16.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.6",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^9.0.7",
        "@types/ws": "^8.5.10",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}